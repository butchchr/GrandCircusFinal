@model GCFinal.MVC.Models.WeatherViewModel

@{
    ViewBag.Title = "Result";
}

<h2>Here are your results for @Model.CityName, @Model.RegionName during @Model.StartDate and @Model.EndDate!</h2>
<p>Based on historical data from the past three years</p>
<table class="table">
    <tr>
        <th>
            Type
            </th>
        <th>
            Daily Max Temp (&#8457;) 
        </th>
        <th>
            Daily Min Temp (&#8457;)
        </th>
        <th>
            Daily Avg Temp (&#8457;)
        </th>
        <th>
            Avg Precip (mm)  
        </th>
        <th>
            Avg Wind Speed (Mph)
        </th>
        <th>
            Avg Humidity %   
        </th>
    </tr>
    @if(Model.Forecasts != null)
    { 
        <tr>
            <td>Forecasts</td>
            <td>@Html.DisplayFor(item => item.Forecasts.DailyMaxTemp)</td>
            <td>@Html.DisplayFor(item => item.Forecasts.DailyMinTemp)</td>
            <td>@Html.DisplayFor(item => item.Forecasts.DailyAvgTemp)</td>
            <td>@Html.DisplayFor(item => item.Forecasts.AvgPrecip)</td>
            <td>@Html.DisplayFor(item => item.Forecasts.AvgWind)</td>
            <td>@Html.DisplayFor(item => item.Forecasts.AvgHumidity)</td>
        </tr>
    }
    <tr>
        <td>Historical</td>
        <td>@Html.DisplayFor(item => item.Historicals.DailyMaxTemp)</td>
        <td>@Html.DisplayFor(item => item.Historicals.DailyMinTemp)</td>
        <td>@Html.DisplayFor(item => item.Historicals.DailyAvgTemp)</td>
        <td>@Html.DisplayFor(item => item.Historicals.AvgPrecip)</td>
        <td>@Html.DisplayFor(item => item.Historicals.AvgWind)</td>
        <td>@Html.DisplayFor(item => item.Historicals.AvgHumidity)</td>

    </tr>
</table >

<h3>We think that you should bring these items!</h3>
<br/>
<table class="table">
    
    @foreach (var item in Model.PackingItems)
    {
    <ul class="nav nav-pills">
        <li role="presentation" class="active"><a href="#">@item.Quantity @item.Name</a></li>
        
        <!--<td>@item.Quantity</td>-->
        <!--<td>@item.Name</td>-->
    </ul>
    }
</table>
<p>The total weight for your luggage is @Html.DisplayFor(item => item.TotalWeightInLbs)!</p>
    @foreach (var result in Model.ContainerPackingResults)
    {
        <p>@result.ContainerName</p>
    }
